<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="@dimen/graph_padding"
    android:paddingBottom="@dimen/graph_padding"
    >
    <View
        android:id="@+id/green_bar"
        android:background="@color/green"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"/>
    <View
        android:id="@+id/red_bar"
        android:background="@color/red"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"/>
    <TextView
        android:id="@+id/title"
        android:text="test"
        android:layout_alignStart="@id/minus_precent"
        android:layout_alignLeft="@id/minus_precent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/percent"
        android:text="100%"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/minus_precent"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:text="-100%"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>


</RelativeLayout>