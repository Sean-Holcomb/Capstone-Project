<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/graph_padding"
    android:paddingTop="@dimen/graph_padding"
    android:orientation="vertical"
   >

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal"
        android:contentDescription="@string/cont_desc_graphBar"
        >

        <View
            android:id="@+id/green_bar"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:background="@color/green"
            />

        <View
            android:id="@+id/clear_bar"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            />

        <View
            android:id="@+id/red_bar"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:background="@color/red"
            />
    </LinearLayout>



    <TextView
        android:id="@+id/percent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_gravity="center_vertical"
        android:text="100%" />

    <TextView
        android:id="@+id/minus_precent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_gravity="center_vertical"
        android:text="-100%" />

    </RelativeLayout>
</LinearLayout>